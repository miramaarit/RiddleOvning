<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RiddleOvning.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="Riddle.jpg"
                HeightRequest="185"
                Aspect="AspectFit"
               />

            <Label
                Text="Riddles!"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            

            <Button
                x:Name="NextPage"
                Text="Go to riddlespage" 
                
                Clicked="GoToRiddles"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
